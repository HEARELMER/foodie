<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba.Views.ItemDetailPage"
             Title="Tu compra">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Producto:" TextColor="Black" FontSize="Medium" />
        <Label Text="{Binding Text}" TextColor="Black" FontSize="Small"/>
        <Label Text="Descripcion:" TextColor="Black" FontSize="Medium" />
        <Label Text="{Binding Description}" TextColor="Black" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>